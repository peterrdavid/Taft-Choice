<div class="signup-box">
	<div class="signup-content">
		<h2>Sign Up</h2>
		<form id="signup-form" onsubmit="return checkSignUpForm();" method="post">
			<input type="text" id="full-name" placeholder="Full Name" required>
			<input type="email" id="email" placeholder="Email" required>
			<input type="text" id="username" placeholder="Username" required>
			<input type="password" id="password" placeholder="Password">
			<input type="password" id="confirm-password" placeholder="Confirm Password">
			<textarea id="review" name="review" rows="8" cols="50" placeholder="Bio"></textarea>
			<br>
			<label for="profile-picture" class="profile-label">Insert Profile Picture</label>
			<input type="file" id="profile-picture" accept="image/*" placeholder="Upload Profile Picture">
			<button type="submit">Sign Up</button>
		</form>
	</div>
	<div class="image-container">
		<img src="https://images.pexels.com/photos/376464/pexels-photo-376464.jpeg" alt="Image">
	</div>
</div>